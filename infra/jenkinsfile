pipeline {
    environment {
        NEXUS_VERSION = "nexus3"
        NEXUS_PROTOCOL = "http"
        NEXUS_URL = "10.80.140.11:8081"
        NEXUS_REPOSITORY = "APP"
        NEXUS_CREDENTIAL_ID = "nexus"
        NEXUS_ARTIFACT_ID = "qcm"
        ENVIRONNEMENT = "dev"
        SECRETDEVOPS_ENV = "${env.SECRETDEVOPS}"
        ROOTKEY_ENV = "${env.$ROOTKEY}"
        KEYNAME_ENV = "${env.$KEYNAME}"
        TYPENAME_ENV = "qcmdev" //"${env.$TYPENAME}"
        REGION1_ENV = "${env.$REGION1}"
        SUBIDPUB_ENV = "${env.$SUBIDPUB}"
        SUBIDPRIV_ENV = "${env.$SUBIDPRIV}"
        VPCID_ENV = "${env.$VPCID}"
        PRIVIP_ENV = "${env.$PRIVIP}"
        INGRPORT_ENV = "${env.$INGRPORT}"
        SECGRPNLST_ENV = "${env.$SECGRPNLST}"
        USCRIPT_ENV = "${env.$USCRIPT}"
        SECGRPID_ENV = "${env.$SECGRPID}"
        INSTTYPE_ENV = "${env.$INSTTYPE}"
    }
//
agent any
    stages {
        stage('clone source') {
            steps {
                sh 'rm -rf depot_projet_1_file_rouge'
                git branch: 'dev', url: 'https://github.com/KevinGit31/depot_projet_1_file_rouge.git'
